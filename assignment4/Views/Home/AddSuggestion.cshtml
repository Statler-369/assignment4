@{
    ViewBag.Title = "Add a New Suggestion";
}

@model assignment4.Models.Suggestions

@*Form to get a suggestion from the user.*@
<div>
    <form method="post" asp-action="AddSuggestion">
        <fieldset>
            <legend>Restaurant Information</legend>
            <label asp-for="Name">Enter your name:</label>
            <input type="text" asp-for="Name" />
            <br /><br />
            <label asp-for="RestName">Restaurant Name:</label>
            <input type="text" asp-for="RestName" />
            <br /><br />
            <label asp-for="FavDish">Favorite Dish:</label>
            <input type="text" asp-for="FavDish" />
            <br /><br />
            <label asp-for="Phone">Restaurant Phone Number:</label>
            <input type="text" asp-for="Phone" placeholder="XXX-XXX-XXXX" />
            <br /><br />
            <input type="submit" value="Submit" class="btn btn-secondary" />
            <div asp-validation-summary="All"></div>
        </fieldset>
    </form>
</div>